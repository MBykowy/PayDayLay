<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PayDayLay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_dark_night</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_night</item>
        <item name="colorSecondaryVariant">@color/accent_dark_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_night</item>
        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnBackground">@color/on_background_night</item>
        <item name="colorOnSurface">@color/on_surface_night</item>

        <!-- For dark theme - slightly lighter versions for better visibility -->

    </style>
</resources>